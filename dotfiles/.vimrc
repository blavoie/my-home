" Use color scheme
colorscheme desert

" Use mouse
set mouse=a

" Don't wrap by default
set nowrap

" Use 4 spaces for indenting
set expandtab
set shiftwidth=4
set softtabstop=4

" Always  set auto indenting on
set autoindent

" Select when using the mouse
set selectmode=mouse

