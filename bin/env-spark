#!/usr/bin/env bash

SPARK_CONF_DIR=~/dev/my-home/configs/spark/local
export SPARK_CONF_DIR

SPARK_HOME=~/app/spark
export SPARK_HOME

PATH=$SPARK_HOME/bin:$PATH
export PATH

# Always prefer IPython

export PYSPARK_DRIVER_PYTHON=ipython

# Setup some aliases

alias pyspark-notebook='PYSPARK_DRIVER_PYTHON_OPTS="notebook" pyspark'

