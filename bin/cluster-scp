#!/usr/bin/env bash

BOLD=$(tput bold)
NORMAL=$(tput sgr0)
YELLOW=$(tput setaf 3)

NODES=${NODES_FILE:-nodes.txt}
for NODE in `sort $NODES`
do
    echo "${BOLD}--------------------------------------------------------------------------${NORMAL}"
    echo "${BOLD}-- Exécution de la commande demandée sur: ${YELLOW}$1@$NODE${NORMAL}"
    echo "${BOLD}--------------------------------------------------------------------------${NORMAL}"
    scp $2 $1@$NODE:$3
    echo ""
done
