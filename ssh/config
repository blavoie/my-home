Host *.cl01 *.cl01.ulaval.ca 
    CheckHostIP no
    ForwardX11 no
    IdentitiesOnly yes
    StrictHostKeyChecking no
    UserKnownHostsFile ~/.ssh/known_hosts.cl01.ulaval.ca

Host *
    ForwardX11 yes 
    #IdentityFile ~/.ssh/id_rsa
